<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".createNotice">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice Subject"
            android:id="@+id/textView_noticeSubject" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_noticeSubject" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Notice"
            android:id="@+id/lbNotice" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edNotice"
            android:layout_weight="0.50"
            android:editable="true"
            android:enabled="true"
            android:inputType="textAutoComplete|text|textMultiLine"
            android:textIsSelectable="true"
            android:nestedScrollingEnabled="true"
            android:minHeight="100dp"
            android:text="blah blah blah test notice blah"
            android:gravity="top|left"
            android:maxHeight="100dp"
            android:minLines="4"
            android:maxLines="8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button_saveNotice"
            android:onClick="onClickSaveNotice"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/map"
            android:onClick="onMapButtonClick"
            android:layout_gravity="right" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eMail"
            android:id="@+id/button_main_eMail"
            android:layout_gravity="right"
            android:onClick="onClickEmail" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag"
            android:id="@+id/button_tag"
            android:layout_gravity="right" />

    </LinearLayout>
</RelativeLayout>
